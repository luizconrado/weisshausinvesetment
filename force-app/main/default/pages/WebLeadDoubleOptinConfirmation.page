    <apex:form id="thisForm">
        
        <div class="container">
            <div class="col-md-12">
                <div class="form-area">  
                    <apex:outputPanel id="panel1" rendered="{!showForm}" layout="block">
                    <apex:pageMessages />
                    
                    <br style="clear:both"/>
                    <h3 style="margin-bottom: 25px; text-align: center;">Double Opt-in Confirmation</h3>
                    <div class="form-group">
                        <apex:inputText styleClass="form-control" required="false" html-placeholder="First Name" id="firstname" value="{!firstname}"/>
                    </div>
                    <div class="form-group">
                        <apex:inputText styleClass="form-control" required="true" html-placeholder="Last Name" id="lastname" value="{!lastname}"/>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i></span>
                            <apex:inputText styleClass="form-control" required="true" html-placeholder="Email" id="email" value="{!email}"/>
                        </div>   
                        
                    </div>
                    
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span></span>
                            <apex:inputText styleClass="form-control" required="false" html-placeholder="Phone Number" id="phone" value="{!phonenumber}"/>
                        </div> 
                    </div> 
                    
                    <div class="form-group">
                        <div class="input-group">
                            <span><apex:inputCheckbox id="box1" value="{!termsandconditions}" required="true"/></span>
                            <b>&nbsp;&nbsp;I accept these terms and conditions</b>
                        </div> 
                    </div>
