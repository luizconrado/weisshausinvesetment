<apex:page showHeader="false">
    <style>
        #liveAgentChatLogText .operator,
        .client {
            display: block;
            margin-top: 20px;
            padding:5px;
        }
        
        #liveAgentChatLogText .system{
        	text-align:center;
        }
        
        /*chat window*/
        #liveAgentChatLog{
            width: auto;
            height: auto;
            top: 43px;
            position: absolute;
            overflow-y: auto;
            left: 0;
            right: 0;
            bottom: 70px;
            border :none;
            
        }
        
        /*Agent*/
        #liveAgentChatLogText .operator .name {
        display: none;
        color: #ffffff;
        background-color: rgb(235, 10, 10);
        overflow: hidden;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        }
        
        #liveAgentChatLogText .operator .name strong {
        margin-left: 2px
        width:2ch;
        }
        
        #liveAgentChatLogText .operator .messageText {
        color: #666666;
        background: #f4f4f4;
        border-radius: 10px 10px 10px 0;
        position: relative;
        font-weight: 400;
        line-height: 1.3;
        max-width: 70%;
        font-size: 1.25em;
        padding: 10px;
        white-space: pre-wrap;
        }
        
        #liveAgentChatLogText .operator .timestamp {
            color:#666;
            font-size:.625em;
            line-height:1.3;
            font-weight:400px;
        	display:block;
        	text-align:left;
        }
        
        #liveAgentChatLogText .operator em {
            padding:5px;
        	display:block;
        }
        
        /*user*/
        #liveAgentChatLogText .client .name {
        	display: none;
        }
        
        #liveAgentChatLogText .client {
        	text-align: right
        }
        
        
        
        #liveAgentChatLogText .client .messageText {
            background: #eb0a0a;
            color: #ffffff;
            margin-left: auto;
            position: relative;
            font-weight: 400;
            line-height: 1.3;
            max-width: 70%;
            padding: 10px;
            font-size: 1.25em;
            border-radius: 10px 10px 0;
            white-space: pre-wrap;
        }
        #liveAgentChatLogText .client .timestamp {
            color:#666;
            font-size:.625em;
            line-height:1.3;
            font-weight:400px;
        	display:block;
        	text-align:right;
        }
        
        /*input*/    
        #liveAgentInputWrapper{
        	background-color:#ededed;
        }
        #liveAgentChatInput{
            width:98%;
            border:1px solid #fff;
            background:#fff;
            font-size:1.25em;
            line-height:1.3;
            overflow:hidden;
            color:#666666;
            box-sizing:border-box;
            outline:none;
            flex-grow:1;
            padding:15px 8px;
            margin:8px;
        }
        #chat-header{
        	top:0px;
        	display:flex;
        	width:100%;
        	border-radius:8px 8px 0 0;
        	background-color:#000;
        }
        #headerText{
            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            align-self: stretch;
            width: calc(100% - 96px);
            color: #ffffff;
            text-decoration: none;
            line-height: normal;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-weight: normal;
        	padding:14px;
        }
        #headerclosebutton{
            padding: 14px;
            color:#ffffff;
        	cursor:pointer;
            background: none;
            border: none;
            float: left;
        }
    </style>
    <div style="top: 0; left: 0; right: 0; bottom: 0; position: absolute;">
        <liveAgent:clientChat >
            <div id="chat-header">
                <h2 id="headerText">
                    Connecting To Live Agent
                </h2>
                <span id="headerclosebutton" onclick="endChat();">
                    X
                </span>
            </div>
           
            
            <liveAgent:clientChatAlertMessage />
            <liveAgent:clientChatStatusMessage />
            <div style="display: flex;flex-direction: column;">
                <div style="top: 3.5em; right: 0; left: 0; padding: 0; z-index: 0;" >
                    <liveAgent:clientChatLog showTimeStamp="false" />
                </div>
                <div id="liveAgentInputWrapper" style="position: fixed; height: auto; right: 0; bottom: 0; left: 0;">
                    <liveagent:clientChatInput />    
                </div>
            </div>
           
            
        </liveAgent:clientChat>
    </div>
    <script>
     liveagent.addEventListener(liveagent.chasitor.Events.CHAT_ESTABLISHED, newagent);
    
     function newagent() {  
         let details = liveagent.chasitor.getDetails();
         let agentName=details.agent.agentName
         document.getElementById('headerText').innerHTML=agentName;
         console.log(agentName);
     }
    function endChat(){
        SfdcApp.LiveAgent.Chasitor.endChat();
    }
    </script>
</apex:page>