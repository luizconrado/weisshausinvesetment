<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Web_To_Lead_Double_Optin_Email</fullName>
        <description>Web-To-Lead Double-Optin Email</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Web_To_Lead_Notification_Email</template>
    </alerts>
    <rules>
        <fullName>Web-To-Lead Double Optin Confirmation</fullName>
        <actions>
            <name>Web_To_Lead_Double_Optin_Email</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>(1 AND 2) AND (3 OR 4)</booleanFilter>
        <criteriaItems>
            <field>Lead.LeadSource</field>
            <operation>equals</operation>
            <value>Web</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.RecordTypeId</field>
            <operation>equals</operation>
            <value>Web Leads</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Newsletter__c</field>
            <operation>equals</operation>
            <value>Awaiting Confirmation,Resend Confirmation</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Product_A__c</field>
            <operation>equals</operation>
            <value>Awaiting Confirmation,Resend Confirmation</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
